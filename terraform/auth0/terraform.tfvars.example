# Auth0 Configuration
# Copy this file to terraform.tfvars and fill in the values

# Auth0 tenant domain (e.g., your-tenant.auth0.com)
auth0_domain = "your-tenant.auth0.com"

# Auth0 Management API credentials
# Create a Machine-to-Machine application in Auth0 with Management API access
auth0_client_id     = "your-auth0-management-client-id"
auth0_client_secret = "your-auth0-management-client-secret"

# GitHub OAuth App credentials
# Create an OAuth App at: GitHub Settings -> Developer settings -> OAuth Apps
github_client_id     = "your-github-oauth-client-id"
github_client_secret = "your-github-oauth-client-secret"

# AWS Configuration
# Download SAML metadata from AWS IAM Identity Center to get these values
# Settings -> Identity source -> Actions -> View IdP configuration

# AWS region (from metadata entityID)
# Example: ap-northeast-2
aws_region = "ap-northeast-2"

# AWS IAM Identity Center ID (from metadata entityID)
# Format: d-xxxxxxxxxx (e.g., d-9b6753d2be)
# Found in: entityID="https://REGION.signin.aws.amazon.com/platform/saml/THIS_VALUE"
aws_identity_center_id = "d-xxxxxxxxxx"

# AWS ACS UUID (from metadata AssertionConsumerService Location)
# Found in: Location="https://REGION.signin.aws.amazon.com/platform/saml/acs/THIS_VALUE"
aws_acs_uuid = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# AWS IAM Identity Center domain for user portal
# Format: d-xxxxxxxxxx.awsapps.com
aws_identity_center_domain = "d-xxxxxxxxxx.awsapps.com"

# Optional: List of allowed GitHub organizations
# Leave empty to allow all organizations
allowed_orgs = []
