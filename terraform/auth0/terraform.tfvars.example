# Auth0 Configuration
# Copy this file to terraform.tfvars and fill in the values

# Auth0 tenant domain (e.g., your-tenant.auth0.com)
auth0_domain = "your-tenant.auth0.com"

# Auth0 Management API credentials
# Create a Machine-to-Machine application in Auth0 with Management API access
auth0_client_id     = "your-auth0-management-client-id"
auth0_client_secret = "your-auth0-management-client-secret"

# GitHub OAuth App credentials
# Create an OAuth App at: GitHub Settings -> Developer settings -> OAuth Apps
github_client_id     = "your-github-oauth-client-id"
github_client_secret = "your-github-oauth-client-secret"

# AWS IAM Identity Center domain
# Find this in AWS IAM Identity Center -> Settings -> Identity source
# Format: d-xxxxxxxxxx.awsapps.com
aws_identity_center_domain = "d-xxxxxxxxxx.awsapps.com"

# Optional: List of allowed GitHub organizations
# Leave empty to allow all organizations
allowed_orgs = []
