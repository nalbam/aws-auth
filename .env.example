# Auth0 Configuration
# Copy this file to .env.local and fill in your Auth0 application credentials

# The base URL of your application (e.g., http://localhost:3000 for development)
APP_BASE_URL=http://localhost:3000

# Your Auth0 application's Client ID
AUTH0_CLIENT_ID=your_auth0_client_id

# Your Auth0 application's Client Secret
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# Your Auth0 tenant domain (e.g., dev-xxxxxxxx.us.auth0.com)
AUTH0_DOMAIN=your_domain.auth0.com

# A long, secret value used to encrypt the session cookie
# You can generate one with: openssl rand -hex 32
AUTH0_SECRET=your_long_secret_value_at_least_32_characters
